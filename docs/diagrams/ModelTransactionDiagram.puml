@startuml
!include style.puml
skinparam padding 2
skinparam minClassWidth 80
skinparam arrowFontSize 10
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Transaction {
Class TransactionList
Interface Transaction <<Interface>>
Class Expense
Class Income
Class Debt
Class Loan
Class Amount
Class Date
Class Description
Class Budget
Class BudgetList
Class Month
Class Year
}

Package Tag {
Class Tag
}

Class HiddenWallet #FFFFFF
Class HiddenPerson #FFFFFF
HiddenWallet --> "1" TransactionList
HiddenWallet --> "1" BudgetList
HiddenPerson --> "*" Debt
HiddenPerson --> "*" Loan
BudgetList o--> "*" Budget
TransactionList o--> "*" Expense
TransactionList o--> "*" Income
Expense .up.|> Transaction
Income .up.|> Transaction
Debt .up.|> Transaction
Loan .up.|> Transaction
Budget *--> Amount
Budget *--> Month
Budget *--> Year
Transaction *--> "1" Amount
Transaction *--> "1" Description
Transaction *--> "1" Date
Transaction *--> "1" Tag

@enduml
